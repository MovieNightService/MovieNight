<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="movienight">
        <createTable tableName="account">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="account_pkey" nullable="false"/>
            </column>
            <column name="created_by_id" type="bigint">
                <constraints nullable="false" foreignKeyName="account_created_by_id_fk" referencedTableName="account"
                             referencedColumnNames="id"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by_id" type="bigint">
                <constraints nullable="false" foreignKeyName="account_updated_by_id_fk" referencedTableName="account"
                             referencedColumnNames="id"/>
            </column>
            <column name="updated_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="deleted" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="agreement" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="account_authority">
            <column name="account_id" type="bigint">
                <constraints nullable="false" foreignKeyName="account_account_id_fk" referencedTableName="account"
                             referencedColumnNames="id"/>
            </column>
            <column name="authorities" type="varchar(255)"/>
        </createTable>

        <loadData tableName="account" file="classpath:db.changelog/population/account.csv"/>
        <loadData tableName="account_authority" file="classpath:db.changelog/population/account_authority.csv"/>

    </changeSet>
</databaseChangeLog>